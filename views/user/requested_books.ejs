<%- include('./includes/nav')%>

<div class="container">
  <form action="requestbook" class="form-inline">
    <button  style="margin:50px 0 20px 0; " type="submit" class="btn btn-dark btn-outline-warning">Request Book <i class="mdi mdi-badge-account-horizontal-outline:"></i></button>
  </form>

    <table class="table  table-striped ">
        <thead class="table-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Book Id</th>
            <th scope="col">Book Name</th>
            <th scope="col">Request Date</th>
            <th scope="col">Status</th>

          </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<books.length;i++) { %>
                <tr>
                  <th scope="row"><%= i+1 %></th>
                  <td><%= books[i].book_id %></td>
                  <td><%= books[i].book_name %></td>
                  <td><%= books[i].request_date %></td>
                  <% if(books[i].status=="Pending") { %>
                  <td style="color:#e39530"><%= books[i].status %></td>
                  <% } %>
                  <% if(books[i].status=="Issued") { %>
                  <td style="color:#51bf3d"><%= books[i].status %></td>
                  <% } %>
                  <% if(books[i].status=="Rejected") { %>
                  <td style="color:#d64f4f"><%= books[i].status %></td>
                  <% } %>
                </tr>
              <% } %>
        
        </tbody>
      </table>

 </div>




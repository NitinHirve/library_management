<%- include('./includes/nav') %>
    <style>
        .form-control {
            background-color: #222d32 !important;
            ;
            color: white !important;
            ;
        }
    </style>


    <div class="container">

        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                <div class="" style="border-radius: 15px;  background-color:#222D32;">
                    <div class="card-body ">

                        <form action="/admin/api/editauthor/<%= user._id %>" method="POST">
                            <div class="row">
                                <div class="col">
                                    <label class="form-label" for="form3Example1cg">Firstname</label>
                                    <input type="text" name="firstname" class="form-control"
                                        value="<%= user.firstname %>" placeholder="First name" aria-label="First name">
                                </div>
                                <div class="col">
                                    <label class="form-label" for="form3Example1cg">Lastname</label>
                                    <input type="text" name="lastname" class="form-control" value="<%= user.lastname %>"
                                        placeholder="Last name" aria-label="Last name">
                                </div>
                            </div>

                            <div style="margin-top:10px;" class="form-outline  ">
                                <label class="form-label" for="form3Example1cg">Username</label>
                                <input type="text" name="username" value="<%= user.username %>"
                                    class="form-control form-control-lg" />
                            </div>

                            <div style="margin-top:10px;" class="form-outline  ">
                                <label class="form-label" for="form3Example1cg">Password</label>
                                <input type="text" name="password" value="<%= user.password %>"
                                    class="form-control form-control-lg" />
                            </div>

                            <div style="margin-top:10px;" class="form-outline  ">
                                <label class="form-label" for="form3Example1cg">Phone</label>
                                <input type="number" name="phone" value="<%= user.phone %>"
                                    class="form-control form-control-lg" />
                            </div>

                            <div style="margin-top:10px;" class="form-outline  ">
                                <label class="form-label" for="form3Example1cg">Address</label>
                                <input type="text" name="address" value="<%= user.address %>"
                                    class="form-control form-control-lg" />
                            </div>

                            <input type="hidden" name="created_on" value="<%= user.created_on %>">


                            <br>
                            <div style="color:white;" class="d-flex justify-content-center">
                                <button type="submit" class="btn btn-success btn-block btn-lg ">Update</button>
                            </div>


                        </form>

                    </div>
                </div>
            </div>
        </div>


    </div>



    <%- include('./includes/footer') %>
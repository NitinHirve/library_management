<%- include('./includes/nav')%>

<div class="container">


    <table style="margin:50px 0 20px 0; " class="table  table-striped ">
        <thead class="table-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Book Id</th>
            <th scope="col">User Id</th>
            <th scope="col">Book Name</th>
            <th scope="col">Request Date</th>
            <th scope="col">Action</th>

          </tr>
        </thead>
        <tbody>
            <% for(var i=0; i<requests.length;i++) { %>
                <tr>
                  <th scope="row"><%= i+1 %></th>
                  <td><%= requests[i].book_id %></td>
                  <td><%= requests[i].user_id %></td>
                  <td><%= requests[i].book_name %></td>
                  <td><%= requests[i].request_date %></td>
                  <% if(requests[i].status=='Pending') { %>
                    <td><a style="color:#32e3e6;" href="rejectrequest/<%= requests[i]._id %>"><button class="btn btn-sm btn-outline-warning">Reject</button></i></a> &nbsp;&nbsp; <a style="color:green;" href="issue_requested_book/<%= requests[i]._id %>"> <button class="btn btn-sm btn-outline-success">Issue</button></i></a></td>
                    <% } else { %>
                      <td ><%= requests[i].status %></td>
                     <% } } %>                
                    </tr>
            
        
        </tbody>
      </table>

 </div>



